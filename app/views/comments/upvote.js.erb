function updateUpvotes(newCount) {
  const upvotes = document.querySelector("[data-comment='<%= @comment.id %>']")
  const upArrow = document.querySelector("[data-comment-arrow='<%= @comment.id %>'] > a");
  upvotes.innerHTML = newCount
  upvotes.style.marginTop = "13px"
  upArrow.style.display = "none";
}

updateUpvotes('<%= @comment.upvotes %>')
