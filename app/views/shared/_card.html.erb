<div class="linebetween">
</div>
<div class="card listed-article" data-sub-categories="<%= article.sub_categories.pluck(:name).join(" ") %>">
  <div class="user-display">
    <div class="avatar">
      <%= image_tag "user.png" %> <%# A REMPLACER PAR LA PHOTO DU USER %>
    </div>
    <div class="user-input">
      <div class="user-info">
        <%= article.user.pseudo%>
      </div>
      <div class="article-comment">
       <%= article.description %>
      </div>
    </div>
  </div>
  <div class="article-preview">
    <div class="article-img"><a href="<%= article.URL %>"><img src="<%= article.image %>" height="150"></a></div>
    <div class="article-info">
      <h2 class="article-title"><a href="<%= article.URL %>"><%= article.title %></a></h2>
      <p class="article-source"><a href="<%= article.URL %>"><%= article.source %></a></p>
      <p class="article-site_description"><a href="<%= article.URL %>"><%= article.site_description %></a></p>
    </div>
  </div>

  <div class="footer-card">
    <div class="footer-info">
      <% article.sub_categories.each do |sub_category| %>
        <%= sub_category.name %>
      <% end %>
    </div>
    <div class="footer-action">
      <%= link_to 'DÃ‰BAT', article_path(article) %>
    </div>
  </div>
</div>

