<div class="pcc-wrapper">

  <h1>Partager un article</h1>

  <%= simple_form_for @article do |f| %>
    <%= f.input :URL %>
    <%= f.input :description %>

    <div class="categories">
      <% Category.all.each do |category| %>
        <%= render 'categories/box', category: category, f: f %>
      <% end %>
    </div>

    <%= f.submit 'Partager' %>
  <% end %>
</div>
