

<div class="tab">
  <button class="tablinks" >Ecologie</button>
  <button class="tablinks" >Politique</button>
  <button class="tablinks">Economie</button>
  <button class="tablinks" >Numérique</button>
</div>

<% @articles.each do |article| %>

  <% articles = [] %>
<div id="Ecologie" class="tabcontent">
  <h2>Ecologie</h2>
  <%if article.category == 'écologie' %>
    <% articles << article %>
  <%articles.each do |artc| %>
    <%= artc.URL %>
  <%end %>
  <%end %>
</div>
<div id="Politique" class="tabcontent">
  <h2>Politique</h2>
  <%if article.category == 'politique' %>
    <%= article.URL %>
  <%end %>
</div>
<div id="Economie" class="tabcontent">
  <h2>Economie</h2>
  <%if article.category == 'économie' %>
    <%= article.URL %>
  <%end %>
</div>
<div id="Numérique" class="tabcontent">
  <h2>Numérique</h2>
  <%if article.category == 'numérique' %>
    <%= article.URL %>
  <%end %>
</div>


<%end %>

<div class="wrapper">
<!--   <div class="themes">
  </div> -->
  <div class="container">
<!--     <div class="left-side-info">
    </div> -->
    <div class="row">
<!--       <div class="top-feed">
      </div> -->
      <% @articles.each do |article| %>
        <div class="card">

          <%=raw Onebox.preview(article.URL) %>
        </div>
      <% end %>
    </div>
  </div>
<!--   <div class="footer">
  </div> -->
</div>


