<div class="themes categories">
  <%= render 'categories/index', categories: @categories %>
</div>
<div class="all-content">
  <div class="sub_categories <%= @category&.name %>">
    <% if @category.present? %>
      <%= render 'sub_categories/index', sub_categories: @sub_categories, category: @category, selected: @sub_categories_selected %>
      <% else %>
      <%=  render 'users/index', articles: @articles %>
    <% end %>
  </div>
    <%= render 'articles/index', articles: @articles %>
</div>

<!-- Modal -->
  <div class="modal fade modal-create-article" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">

          <div class="new-article-form">

            <h2>Partager un article</h2>

            <%= simple_form_for Article.new do |f| %>
              <%= f.input :URL, label: 'Lien de l\'article' %>
              <%= f.input :description, label: 'Commentaire' %>

              <div class="categories">
                <% Category.all.each do |category| %>
                    <%= render 'categories/box', category: category, f: f %>
                <% end %>
              </div>
              <div class="article-submit">
                <%= f.submit 'Partager', class: "button-black" %>
              </div>
            <% end %>

          </div>
      </div>
    </div>
  </div>

