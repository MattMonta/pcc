<div class="category-box">
  <%= image_tag "#{category.name}.jpg", alt: category.name, width: 200, height: 133, class: 'category-image', data: { category_id: "category-#{category.id}"} %>
  <%= f.input :category_id, input_html: {value: category.id}, as: :hidden %>
  <div class="sub-categories hidden" id='category-<%= category.id %>'>
    <%= f.input :sub_category_ids, collection: category.sub_categories, as: :check_boxes, label: category.name  %>
  </div>
</div>
